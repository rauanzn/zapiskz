<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/masterAvatar"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/masterName"
        android:text="Юлия"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@id/masterAvatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:maxLines="1"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/profession"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@id/masterName"
        app:layout_constraintEnd_toEndOf="@id/masterAvatar"
        app:layout_constraintStart_toStartOf="@id/masterAvatar"
        android:maxLines="1"
        />
</androidx.constraintlayout.widget.ConstraintLayout>